@model IEnumerable<HollyProject.Models.User>

@{
    Layout = "_Layout_Admin";
}

@{
    ViewData["Title"] = "User";
}

<div class="section-header">
    <h1>User</h1>
    <div class="section-header-breadcrumb">
        <div class="breadcrumb-item active"><a href="/Admin/Dashboard">Dashboard</a></div>
        <div class="breadcrumb-item active"><a href="/Admin/User">User</a></div>
    </div>
</div>

<div class="section-body">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4>
                        <a asp-action="Create">Create New</a>
                    </h4>

                    <div class="card-header-form" style="width:35%">
                        <form>
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Search">

                                <div class="input-group-btn">
                                    <button class="btn btn-primary"><i class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped" id="table-content">
                            <tr>
                                <th width="5%">
                                    <div class="custom-checkbox custom-control">
                                        <input type="checkbox" data-checkboxes="mygroup" data-checkbox-role="dad" class="custom-control-input" id="checkbox-all">
                                        <label for="checkbox-all" class="custom-control-label">&nbsp;</label>
                                    </div>
                                </th>
                                <th>@Html.DisplayNameFor(model => model.name)</th>
                                <th>@Html.DisplayNameFor(model => model.username)</th>
                                <th>@Html.DisplayNameFor(model => model.Role.role)</th>
                                <th>#</th>
                                @* <th>@Html.DisplayNameFor(model => model.role)</th> *@
                            </tr>

                            @foreach(var item in Model) {
                                <tr>
                                    <td>
                                        <div class="custom-checkbox custom-control">
                                            <input type="checkbox" data-checkboxes="mygroup" class="custom-control-input" id="checkbox-1">
                                            <label for="checkbox-1" class="custom-control-label">&nbsp;</label>
                                        </div>
                                    </td>
                                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.username)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Role.role)</td>
                                    <td>
                                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.id">Edit</a>
                                        <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.id">Details</a>
                                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id">Delete</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


